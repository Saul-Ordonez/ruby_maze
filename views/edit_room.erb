<h1>Update <%= @room.name() %></h1>

<form action="/rooms/<%= @room.name() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="room_name">Rename room (unavailable)</label>
  <input id="room_name" name="room_name" type="text">

  <label for="year">room year</label>
  <input id="year" name="year" type="text">

  <label for="genre">room genre</label>
  <input id="genre" name="genre" type="text">

  <label for="artist">room artist</label>
  <input id="artist" name="artist" type="text">


  <button type="submit">Update</button>
</form>

<form action="/rooms/<%= @room.name() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete room</button>
</form>

<p><a href="/rooms">Return to room list</a></p>
